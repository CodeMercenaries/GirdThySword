<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.code.codemercenaries.girdthyswordpro.activities.StatsActivity"
    tools:showIn="@layout/app_bar_stats">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/memorizedVersesLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/memorizedVerses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_verses"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/memorizedVersesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/memorized_verses" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addedVersesLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/memorizedVersesLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/addedVerses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_verses"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/addedVersesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/added_verses" />

            </LinearLayout>

            <TextView
                android:id="@+id/badgesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addedVersesLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/badges"
                android:textSize="40sp"/>

            <LinearLayout
                android:id="@+id/badgesFirstRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/badgesTitle"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/badge_card"
                    android:layout_height="@dimen/badge_card"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/badge5"
                        android:layout_width="@dimen/badge_image"
                        android:layout_height="@dimen/badge_image"
                        android:layout_gravity="center" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/badge_card"
                    android:layout_height="@dimen/badge_card"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/badge20"
                        android:layout_width="@dimen/badge_image"
                        android:layout_height="@dimen/badge_image"
                        android:layout_gravity="center" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/badge_card"
                    android:layout_height="@dimen/badge_card"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/badge40"
                        android:layout_width="@dimen/badge_image"
                        android:layout_height="@dimen/badge_image"
                        android:layout_gravity="center" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/badgesFirstRow"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/badge_card"
                    android:layout_height="@dimen/badge_card"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/badge70"
                        android:layout_width="@dimen/badge_image"
                        android:layout_height="@dimen/badge_image"
                        android:layout_gravity="center" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/badge_card"
                    android:layout_height="@dimen/badge_card"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/badge100"
                        android:layout_width="@dimen/badge_image"
                        android:layout_height="@dimen/badge_image"
                        android:layout_gravity="center" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/badge_card"
                    android:layout_height="@dimen/badge_card"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/badge150"
                        android:layout_width="@dimen/badge_image"
                        android:layout_height="@dimen/badge_image"
                        android:layout_gravity="center" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
